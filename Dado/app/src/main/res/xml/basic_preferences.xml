<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="basic_preferences">
        <Preference
            app:key="preference"
            app:summary="summary_basic_preference"
            app:title="title_basic_preference" />
        <Preference
            app:key="stylized"
            app:summary="summary_stylish_preference"
            app:title="title_stylish_preference" />
        <Preference
            app:icon="@drawable/ic_launcher_background"
            app:key="icon"
            app:summary="summary_icon_preference"
            app:title="title_icon_preference" />
        <Preference
            app:key="single_line_title"
            app:singleLineTitle="true"
            app:summary="summary_single_line_title_preference"
            app:title="Next"
            app:fragment="com.shiden.dado.Settings$WidgetPreferencesFragment"/>
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>