<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="widgets">
        <CheckBoxPreference
            app:key="checkbox"
            app:summary="summary_checkbox_preference"
            app:title="title_checkbox_preference" />
        <SwitchPreferenceCompat
            app:key="switch"
            app:summary="summary_switch_preference"
            app:title="title_switch_preference" />
        <DropDownPreference
            app:entries="@array/entries"
            app:entryValues="@array/entry_values"
            app:key="dropdown"
            app:title="title_dropdown_preference"
            app:useSimpleSummaryProvider="true" />
        <SeekBarPreference
            app:defaultValue="20"
            app:key="seekbar"
            app:summary="summary_seekbar_preference"
            app:title="next"
            app:fragment="com.shiden.dado.Settings$DialogPreferencesFragment"/>
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>